<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head') %>
  </head>
  <body>
    <%- include('./partials/header') %>
    <div class="margeHaut"></div>
    <div id="pageToutesVideos">
      <h1>Nos vidéos</h1>

      <form class="navbar-search w-25" id="searchBar">
        <div class="input-group mb-3">
          <input
            type="text"
            class="form-control"
            placeholder="Rechercher une vidéo"
            aria-label="rechercheVideo"
            aria-describedby="basic-addon2"
          />
          <div class="input-group-append" id="iconeBarreRecherche">
            <span class="input-group-text" id="basic-addon2"
              ><img
                class=""
                id="iconeLoupe"
                src="./images/iconeLoupe.png"
                alt=""
            /></span>
          </div>
        </div>
      </form>
      
      <div>

        <ul class="videos">
          <% for ( let video of lesVideos ) { %>
            <li class="video">
              <span><%= video.nomVideo %>
              <span><%= video.description %>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
  <footer><%- include('./partials/footer') %></footer>
</html>
