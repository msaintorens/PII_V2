<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head') %>
  </head>
  <body>
    <%- include('./partials/header') %>
    <div class="margeHaut"></div>
    <div id="pageAjoutVideo">
      <h1>Ajouter une vidéo</h1>
      <form id="inputAjoutVideo" action="/videos" method="POST">
        <div class="input-group mb-3 w-25">
          <input type="file" class="form-control" id="inputGroupFile02" />
        </div>

        <div class="input-group mb-3 w-25">
          <input
            type="text"
            class="form-control"
            placeholder="Nom de la vidéo"
            aria-label="nomVideo"
            name="nomVideo"
            required
          />
        </div>

        <div class="input-group w-25">
          <textarea
            class="form-control"
            placeholder="Description"
            aria-label="descriptionVideo"
            name="description"
          ></textarea>
        </div>

        <div class="input-group mb-3 w-25" id="inputPaysVideo">
          <input
            type="text"
            class="form-control"
            placeholder="Pays"
            aria-label="paysVideo"
            name="pays"
            required
          />
        </div>

        <div class="input-group mb-3 w-25">
          <input
            type="date"
            class="form-control"
            placeholder="Date de réalisation de la vidéo"
            aria-label="dateVideo"
            name="date"
            required
          />
        </div>

        <div id="actionsAjoutVideo">
          <div class="btnAnnulerAjout">
            <button class="btn btn-info btn-sm" type="reset">Annuler</button>
          </div>

          <div class="btnAjoutVideo">
            <button class="btn btn-info btn-sm" type="submit">Ajouter</button>
          </div>
        </div>
      </form>
      <div class="container-fluid" id="lienPageProfil">
        <a href="/profile">Retourner à mon profil</a>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
  <footer><%- include('./partials/footer') %></footer>
</html>
